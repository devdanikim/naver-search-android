<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blogSearchFragment">

    <fragment
        android:id="@+id/blogSearchFragment"
        android:name="com.dani.naversearch.ui.BlogSearchFragment"
        android:label="fragment_blog_search"
        tools:layout="@layout/fragment_blog_search" >
        <action
            android:id="@+id/action_blogSearchFragment_to_cafeSearchFragment"
            app:destination="@id/cafeSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/cafeSearchFragment"
        android:name="com.dani.naversearch.ui.CafeSearchFragment"
        android:label="fragment_cafe_search"
        tools:layout="@layout/fragment_cafe_search" >
        <action
            android:id="@+id/action_cafeSearchFragment_to_imageSearchFragment"
            app:destination="@id/imageSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageSearchFragment"
        android:name="com.dani.naversearch.ui.ImageSearchFragment"
        android:label="fragment_image_search"
        tools:layout="@layout/fragment_image_search" />
</navigation>